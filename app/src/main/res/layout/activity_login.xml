<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="누네띠네"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquareneo_bold"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_id_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_tv"
        app:layout_constraintStart_toStartOf="@id/login_tv"
        app:layout_constraintEnd_toEndOf="@id/login_tv">

        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lo_input"
            android:drawableStart="@drawable/ico_person"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:hint="아이디"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_pw_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_id_lo"
        app:layout_constraintStart_toStartOf="@id/login_id_lo"
        app:layout_constraintEnd_toEndOf="@id/login_id_lo">

        <EditText
            android:id="@+id/login_pw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lo_input"
            android:drawableStart="@drawable/ico_password"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:hint="비밀번호"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_find_account_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="100dp"
        app:layout_constraintTop_toBottomOf="@id/login_pw_lo">

        <TextView
            android:id="@+id/login_find_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:fontFamily="@font/nanumsquareneo_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_find_bar_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/login_find_bar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_find_pw_tv"
            app:layout_constraintStart_toEndOf="@id/login_find_id_tv"/>

        <TextView
            android:id="@+id/login_find_pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:fontFamily="@font/nanumsquareneo_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/login_find_bar_tv"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main"
        android:text="로그인"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@id/login_kakao_btn"
        app:layout_constraintTop_toBottomOf="@id/login_find_account_lo"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_kakao_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main"
        android:gravity="center"
        android:text="카카오 로그인"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:backgroundTint="@color/kakao"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@id/login_join_btn"
        app:layout_constraintTop_toBottomOf="@id/login_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_join"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_kakao_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>