<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_solve_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="문제 풀기"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:background="@drawable/btn_home"
        app:layout_constraintVertical_bias="0.32"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_add_btn"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="지문 추가"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:background="@drawable/btn_home"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/home_solve_btn"
        app:layout_constraintStart_toStartOf="@id/home_solve_btn"
        app:layout_constraintEnd_toEndOf="@id/home_solve_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>