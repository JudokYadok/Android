<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_logo_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home_logo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/main_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/home_logo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주독야독"
            android:textSize="36dp"
            android:fontFamily="@font/dongle"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/home_logo_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_logo_iv"
            app:layout_constraintStart_toEndOf="@id/home_logo_iv"/>

        <ImageView
            android:id="@+id/home_profile_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_profile"
            app:layout_constraintTop_toTopOf="@id/home_logo_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_logo_iv"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_banner_vp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_logo_lo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_1_btn"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:background="@drawable/btn_main"
        android:text="최근 기출 지문을 \n이용한 문제 생성"
        android:lineSpacingExtra="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_2_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_2_btn"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:background="@drawable/btn_main_white"
        android:text="지문 새로 추가"
        android:lineSpacingExtra="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        app:layout_constraintTop_toTopOf="@id/home_1_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_1_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_3_btn"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:background="@drawable/btn_main_white"
        android:text="직접 추가한 지문을 \n이용한 문제 생성"
        android:lineSpacingExtra="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/home_1_btn"
        app:layout_constraintStart_toStartOf="@id/home_1_btn"
        app:layout_constraintEnd_toEndOf="@id/home_1_btn"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_4_btn"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:background="@drawable/btn_main"
        android:text="추가한 지문 리스트"
        android:lineSpacingExtra="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        app:layout_constraintTop_toTopOf="@id/home_3_btn"
        app:layout_constraintStart_toStartOf="@id/home_2_btn"
        app:layout_constraintEnd_toEndOf="@id/home_2_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>