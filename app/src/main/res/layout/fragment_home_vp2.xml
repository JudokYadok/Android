<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/yellow_pink"
    android:layout_margin="30dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/vp2_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ico_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/vp2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문제 유형별 학습 선택 가능"
        android:textSize="55dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquareneo_bold"
        app:layout_constraintTop_toTopOf="@id/vp2_iv"
        app:layout_constraintBottom_toBottomOf="@id/vp2_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>