<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/add_list_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_left_arrow"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintTop_toTopOf="@id/add_list_tv"
        app:layout_constraintBottom_toBottomOf="@id/add_list_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_list_tv"/>

    <TextView
        android:id="@+id/add_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가한 지문 리스트"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:textSize="24dp"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_list_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="250dp"
        app:layout_constraintTop_toBottomOf="@id/add_list_tv">

        <TextView
            android:id="@+id/add_list_type_tv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main"
            android:backgroundTint="@color/white_pink"
            android:text="지문 유형"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="@font/nanumsquareneo_bold"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/add_list_type_name_tv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main"
            android:backgroundTint="@color/white_pink"
            android:text="지문명"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="@font/nanumsquareneo_bold"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_contents"
        app:layout_constraintTop_toBottomOf="@id/add_list_lo"/>
</androidx.constraintlayout.widget.ConstraintLayout>